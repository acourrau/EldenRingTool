<Window x:Class="EldenRingTool.Selection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EldenRingTool"
        mc:Ignorable="d"
        Title="Selection" MinHeight="500" MinWidth="300" SizeToContent="Width" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Click="okClick">OK</Button>
        <ListBox x:Name="listBox" MouseDoubleClick="okClick"/>
    </DockPanel>
</Window>
